{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
    },
    "types": ["unplugin-vue-define-options", "vite/client"],
    "allowJs": true
  },
  "include": ["examples/**/*", "src/**/*", "plugins/*"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["examples/assets/iconfont/iconfont.js"]
}
